@using WebStore.Models.Account
@model WebStore.Models.Account.LoginUserViewModel
@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Login to your account</h2>
                    <form method="post">
                        <input asp-for="UserName" type="text" placeholder="Имя пользователя" />
                        <input asp-for="Password" type="password" placeholder="Пароль" />
                        <span>
                            <input asp-for="RememberMe" type="checkbox" class="checkbox">
                            запомнить?
                        </span>
                        <button type="submit" class="btn btn-default">Вход</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->