@using Microsoft.AspNetCore.Http.Internal
@using WebStore.Entities.Entities
@model WebStore.Entities.ViewModels.Admin.OrderDetailsViewModel

@{
    var orderItems = Model.Order.OrderItems.ToList();

    OrderItem orderItemExample = new OrderItem();
}
<hr>
@{
    if (orderItems.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @nameof(orderItemExample.Price)
                    </th>
                    <th>
                        @nameof(orderItemExample.Product)
                    </th>
                    <th>
                        @nameof(orderItemExample.Quantity)
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in orderItems)
                    {
                        <tr>
                            <th>
                                @item.Price
                            </th>
                            <th>
                                @item.Product.Name
                            </th>
                            <th>
                                @item.Quantity
                            </th>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>Something went wrong! Items count can't be less than 1</h4>
    }
}

