@using WebStore.Entities.ViewModels
@model WebStore.Entities.ViewModels.EmployeeViewModel
<hr />
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Имя</td>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <td>Фамилия</td>
        <td>@Model.SurName</td>
    </tr>
    <tr>
        <td>Отчество</td>
        <td>@Model.Patronymic</td>
    </tr>
    <tr>
        <td>Возраст</td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Профессия</td>
        <td>@Model.Position</td>
    </tr>
</table>
<a class="btn btn-primary" asp-controller="Employee" asp-action="EmployeeList" role="button">Назад к списку</a>
