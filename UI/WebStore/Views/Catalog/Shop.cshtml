@using WebStore.Entities.ViewModels
@model WebStore.Entities.ViewModels.CatalogViewModel

<section>
    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("Partial/_LeftSideBar")
        </div>
        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync("_ProductItems", Model.Products)

            <paging class="pagination" page-model="@Model.PageViewModel"
                    page-action="Shop"
                    page-url-SectionId="@Model.SectionId"
                    page-url-BrandId="@Model.BrandId">
            </paging>
        </div>
        
    </div>
</section>

