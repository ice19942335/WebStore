@using WebStore.Entities.ViewModels
@model WebStore.Entities.ViewModels.CatalogViewModel

<section>
    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("Partial/_LeftSideBar")
        </div>
        <div class="col-sm-9 padding-right">
            <div id="itemsContainer">
                @await Html.PartialAsync("_ProductItems",
                    Model.Products)
            </div>
            <paging page-model="@Model.PageViewModel" page-action="Shop"
                    page-url-sectionId="@Model.SectionId"
                    page-url-brandId="@Model.BrandId"></paging>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/jquery/jquery-loading-overlay/loadingoverlay.min.js"></script>
    <script src="~/js/shop/productItems.js"></script>
    <script>
        $(function() {
            ProductItems.init({
                getUrl: '@Url.Action("GetFilteredItems")'
            });
        });
    </script>
}
